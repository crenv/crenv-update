#!/usr/bin/env bash
set -e
[ -n "$CRENV_DEBUG" ] && set -x

shell="$(basename "${CRENV_SHELL:-$SHELL}")"

case "$shell" in
fish )
  echo -n "$(which crenv-update); and "
  echo -n 'echo -e "\033[1;32mreloading crenv\033[0m"; and '
  echo -n '. (crenv init - | psub); and '
  echo -n 'echo -e " \033[1;32m|\033[0m  done"'
  ;;
* )
  echo -n "$(which crenv-update) && "
  echo -n 'echo -e "\033[1;32mreloading crenv\033[0m" && '
  echo -n 'eval "$(crenv init -)" && '
  echo -n 'echo -e " \033[1;32m|\033[0m  done"'
  ;;
esac

echo
